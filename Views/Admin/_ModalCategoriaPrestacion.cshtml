@model netCoreNew.Models.CategoriaPrestacion

<input asp-for="@Model.Id" type="hidden">

<div class="row">

    <div class="form-group col-md-12">
        <label asp-for="@Model.Nombre" class=""></label>
        <input asp-for="@Model.Nombre" class="form-control">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    

    <div class="form-group col-md-12">
        <label asp-for="@Model.Observaciones" class=""></label>
        <input asp-for="@Model.Observaciones" class="form-control">
        <span asp-validation-for="@Model.Observaciones" class="text-danger"></span>
    </div>
</div>

<div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>

<div class="row">

    <div class="col-md-12">

        <div data-items="@Model.ItemsLoad" data-empty="true" class="repeaterCategoria repeaterDiv" style="width: 100%;">

            <div class="row text-center mb-2 headerRepeater">

                <div class="col-md-8">
                    Insumo
                </div>

                <div class="col-md-3">
                    Cantidad
                </div>

                <div class="col-md-1">

                </div>

            </div>

            <div class="row">

                <div data-repeater-list="Items" class="col-lg-12">

                    <div data-repeater-item class="form-group row align-items-center rowRepeater rowRepeaterCategoria" name="inner-group">

                        <div class="col-md-8">
                            <select name="IdInsumo" asp-items="@ViewBag.IdInsumo"  data-container=".modal-body" class="form-control kt-selectpicker" data-live-search="true" title="== Insumo ==">
                            </select>
                        </div>

                        <div class="col-md-3">
                            <input name="Cantidad" type="text" class="form-control cantidad" value="0" placeholder="Cant" onchange="ActualizarRepeaterCategoria();" style="text-align: center">
                        </div>

                        <div class="col-md-1">

                            <a href="javascript:;" name="Boton" data-repeater-delete="" class="btn-sm btn btn-label-danger btn-bold" onclick="ActualizarRepeaterCategoria(true);">
                                <i class="la la-trash-o"></i>
                            </a>
                        </div>

                    </div>

                </div>

            </div>

            <div class="form-group form-group-last">
                <a href="javascript:;" data-repeater-create="" id="repeater-button" class="btn btn-bold btn-sm btn-label-brand mt-2" onclick="ActualizarRepeaterCagegoria(true);">
                    <i class="la la-plus"></i> AGREGAR
                </a>
            </div>

        </div>

    </div>
    

</div>

