@model netCoreNew.Models.Proveedor

<input asp-for="@Model.Id" type="hidden">

<div class="kt-portlet__body">

    <ul class="nav nav-pills nav-fill" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#kt_tabs_1">Datos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#kt_tabs_2">Bancarios</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#kt_tabs_3">Fiscales</a>
        </li>
    </ul>

    <div class="tab-content">

        <div class="tab-pane active" id="kt_tabs_1" role="tabpanel">

            <div class="row">

                <div class="form-group col-md-6">
                    <label asp-for="@Model.RazonSocial" class=""></label>
                    <input asp-for="@Model.RazonSocial" class="form-control">
                    <span asp-validation-for="@Model.RazonSocial" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.CUIT" class=""></label>
                    <input asp-for="@Model.CUIT" class="form-control">
                    <span asp-validation-for="@Model.CUIT" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Alias" class=""></label>
                    <input asp-for="@Model.Alias" class="form-control">
                    <span asp-validation-for="@Model.Alias" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Telefono" class=""></label>
                    <input asp-for="@Model.Telefono" class="form-control">
                    <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Email" class=""></label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Contacto" class=""></label>
                    <input asp-for="@Model.Contacto" class="form-control">
                    <span asp-validation-for="@Model.Contacto" class="text-danger"></span>
                </div>

                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Domicilio" class=""></label>
                    <input asp-for="@Model.Domicilio" class="form-control">
                    <span asp-validation-for="@Model.Domicilio" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Localidad" class=""></label>
                    <input asp-for="@Model.Localidad" class="form-control">
                    <span asp-validation-for="@Model.Localidad" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.IdProvincia" class="">Provincia</label>
                    <select asp-for="@Model.IdProvincia" asp-items="Html.GetEnumSelectList<netCoreNew.Enum.Valores.ProvinciaEnum>()" class="form-control select2Simple">
                        <option>-- Seleccione uno --</option>
                    </select>
                    <span asp-validation-for="@Model.IdProvincia" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="@Model.Etiquetas" class=""></label>
                    <input asp-for="@Model.Etiquetas" class="form-control tags">
                    <span asp-validation-for="@Model.Etiquetas" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="@Model.Notas" class=""></label>
                    <textarea asp-for="@Model.Notas" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Notas" class="text-danger"></span>
                </div>

            </div>

        </div>

        <div class="tab-pane" id="kt_tabs_2" role="tabpanel">

            <div class="row">

                <div class="form-group col-md-6">
                    <label asp-for="@Model.Banco" class=""></label>
                    <input asp-for="@Model.Banco" class="form-control">
                    <span asp-validation-for="@Model.Banco" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.CBU" class=""></label>
                    <input asp-for="@Model.CBU" class="form-control">
                    <span asp-validation-for="@Model.CBU" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.RetencionGanancias" class="">Retencion Ganancias</label>
                    <input asp-for="@Model.RetencionGanancias" class="form-control">
                    <span asp-validation-for="@Model.RetencionGanancias" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.IdCondicionIva" class="">Condicion IVA</label>
                    <select asp-for="@Model.IdCondicionIva" asp-items="Html.GetEnumSelectList<netCoreNew.Enum.Valores.CondicionFrenteIvaEnum>()" class="form-control select2Simple">
                        <option>-- Seleccione uno --</option>
                    </select>
                    <span asp-validation-for="@Model.IdCondicionIva" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.IdCondicionPago" class="">Condicion Pago</label>
                    <select asp-for="@Model.IdCondicionPago" asp-items="@ViewBag.IdCondicionPago" class="form-control select2Simple">
                    </select>
                    <span asp-validation-for="@Model.IdCondicionPago" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.IIBB" class=""></label>
                    <input asp-for="@Model.IIBB" class="form-control">
                    <span asp-validation-for="@Model.IIBB" class="text-danger"></span>
                </div>

            </div>

        </div>

        <div class="tab-pane" id="kt_tabs_3" role="tabpanel">

            <div class="row">

                <div class="form-group col-md-6">
                    <label asp-for="@Model.DireccionFiscal" class="">Direccion Fiscal</label>
                    <input asp-for="@Model.DireccionFiscal" class="form-control">
                    <span asp-validation-for="@Model.DireccionFiscal" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.LocalidadFiscal" class="">Localidad Fiscal</label>
                    <input asp-for="@Model.LocalidadFiscal" class="form-control">
                    <span asp-validation-for="@Model.LocalidadFiscal" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.CPFiscal" class="">CP Fiscal</label>
                    <input asp-for="@Model.CPFiscal" class="form-control">
                    <span asp-validation-for="@Model.CPFiscal" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="@Model.IdProvinciaFiscal" class="">Provincia</label>
                    <select asp-for="@Model.IdProvinciaFiscal" asp-items="Html.GetEnumSelectList<netCoreNew.Enum.Valores.ProvinciaEnum>()" class="form-control select2Simple">
                    </select>
                    <span asp-validation-for="@Model.IdProvinciaFiscal" class="text-danger"></span>
                </div>

            </div>

        </div>

    </div>

</div>