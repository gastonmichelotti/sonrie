@model netCoreNew.Models.Insumo

<input asp-for="@Model.Id" type="hidden">

<div class="row">

    <div class="form-group col-md-12">
        <label asp-for="@Model.Nombre" class=""></label>
        <input asp-for="@Model.Nombre" class="form-control">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.UnidadVenta" class=""></label>
        <input asp-for="@Model.UnidadVenta" class="form-control">
        <span asp-validation-for="@Model.UnidadVenta" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.PrecioDolar" class=""></label>
        <input asp-for="@Model.PrecioDolar" class="form-control">
        <span asp-validation-for="@Model.PrecioDolar" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.Etiquetas" class="">Etiquetas</label>
        <input asp-for="@Model.Etiquetas" class="form-control tags">
        <span asp-validation-for="@Model.Etiquetas" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.Observaciones" class=""></label>
        <input asp-for="@Model.Observaciones" class="form-control">
        <span asp-validation-for="@Model.Observaciones" class="text-danger"></span>
    </div>
</div>

