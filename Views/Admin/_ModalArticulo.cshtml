@model netCoreNew.Models.Articulo

<input asp-for="@Model.Id" type="hidden">

<div class="row">

    <div class="form-group col-md-6">
        <label asp-for="@Model.Codigo" class="">Código</label>
        <input asp-for="@Model.Codigo" class="form-control">
        <span asp-validation-for="@Model.Codigo" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Nombre" class=""></label>
        <input asp-for="@Model.Nombre" class="form-control">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Marca" class=""></label>
        <input asp-for="@Model.Marca" class="form-control">
        <span asp-validation-for="@Model.Marca" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.UnidMedida" class="">Unidad de medida</label>
        <input asp-for="@Model.UnidMedida" class="form-control">
        <span asp-validation-for="@Model.UnidMedida" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="@Model.Marca" class="">Marca</label>
        <input asp-for="@Model.Marca" class="form-control">
        <span asp-validation-for="@Model.Marca" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.Descripcion" class="">Descripción</label>
        <textarea asp-for="@Model.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.Etiquetas" class="">Etiquetas</label>
        <input asp-for="@Model.Etiquetas" class="form-control tags">
        <span asp-validation-for="@Model.Etiquetas" class="text-danger"></span>
    </div>

    <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg kt-separator--portlet-fit"></div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.Observaciones" class=""></label>
        <textarea asp-for="@Model.Observaciones" class="form-control"></textarea>
        <span asp-validation-for="@Model.Observaciones" class="text-danger"></span>
    </div>

</div>
