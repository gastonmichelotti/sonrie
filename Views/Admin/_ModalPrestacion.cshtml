@model netCoreNew.Models.Prestacion

<input asp-for="@Model.Id" type="hidden">

<div class="row">

     <div class="form-group col-md-12">
        <label asp-for="@Model.IdCategoriaPrestacion" class="">Categoría de Prestación</label>
        <select asp-for="@Model.IdCategoriaPrestacion" asp-items="@ViewBag.IdCategoriaPrestacion" class="form-control select2Simple">
            <option>Seleccione una categoría</option>
        </select>
        <span asp-validation-for="@Model.IdCategoriaPrestacion" class="text-danger"></span>
    </div>    

    <div class="form-group col-md-4">
        <label asp-for="@Model.Codigo" class=""></label>
        <input asp-for="@Model.Codigo" class="form-control">
        <span asp-validation-for="@Model.Codigo" class="text-danger"></span>
    </div>

    <div class="form-group col-md-8">
        <label asp-for="@Model.Nombre" class=""></label>
        <input asp-for="@Model.Nombre" class="form-control">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>  

    
    <div class="form-group col-md-12">
        <label asp-for="@Model.Observaciones" class=""></label>
        <input asp-for="@Model.Observaciones" class="form-control">
        <span asp-validation-for="@Model.Observaciones" class="text-danger"></span>
    </div>

</div>