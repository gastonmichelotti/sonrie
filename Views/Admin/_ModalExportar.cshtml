@model netCoreNew.ViewModels.VerExportarVM

<input asp-for="@Model.Id" type="hidden">
<input asp-for="@Model.Seleccionados" type="hidden">

<div class="row">

    <div class="form-group col-md-12">
        <label asp-for="@Model.Instrucciones" class="">Instrucciones especiales</label>
        <textarea asp-for="@Model.Instrucciones" class="form-control"></textarea>
        <span asp-validation-for="@Model.Instrucciones" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="@Model.LugarEntrega" class="">Lugar de entrega</label>
        <textarea asp-for="@Model.LugarEntrega" class="form-control"></textarea>
        <span asp-validation-for="@Model.LugarEntrega" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12">
        <label class="">Items</label>
        <br />
        @foreach (var item in Model.Items)
        {
            <label class="kt-checkbox kt-checkbox--bold">
                <input type="checkbox" class="Items" value="@item.Id" name="Items">
                @item.Nombre
                <span></span>
            </label>
            <br />
        }
    </div>

</div>

<script>

    $(".Items").change(function () {
        var items = []
        $(".Items").each(function () {
            if ($(this).prop('checked')) {
                items.push($(this).val());
            }
        });
        $("#Seleccionados").val(items.join(","));
    });

</script>