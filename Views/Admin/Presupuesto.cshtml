@model netCoreNew.Models.Compra

@{
    ViewData["Title"] = "Presupuesto";
}

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            @ViewData["Title"]
        </h3>
    </div>
    <div class="kt-subheader__toolbar">
        <div class="kt-subheader__wrapper">
            <button type="button" class="btn btn-brand btn-icon-sm" onclick="window.print()">
                <i class="la la-print"></i> IMPRIMIR
            </button>
        </div>
    </div>
</div>

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-lg-12">
            <div class="kt-portlet">
                <div class="kt-portlet__body kt-portlet__body--fit">
                    <div class="kt-invoice-2">
                        <div class="kt-invoice__wrapper">
                            <div class="kt-invoice__head">
                                <div class="kt-invoice__container kt-invoice__container--centered">
                                    <div class="kt-invoice__logo">
                                        <a href="#">
                                            <h1>PEDIDO DE COTIZACION</h1>
                                        </a>
                                        <a href="#">
                                            <img src="~/logomenu.png" style="max-height: 100px; object-fit: cover;">
                                        </a>
                                    </div>
                                    <span class="kt-invoice__desc">
                                        <span>FLORO S.R.L</span>
                                        <span>Tte. Gral. Donato Alvarez 7273, X5147 Córdoba</span>
                                        <span>3516869779</span>
                                        <span>compras@vilahousecasas.com</span>
                                        <span>30715570404</span>
                                        <span>RESPONSABLE INSCRIPTO</span>
                                    </span>
                                    <div class="kt-invoice__items">
                                        <div class="kt-invoice__item">
                                            <span class="kt-invoice__subtitle">FECHA EMISION</span>
                                            <span class="kt-invoice__text">@DateTime.UtcNow.AddHours(-3).ToString("dd/MM/yyyy")</span>
                                        </div>
                                        @*<div class="kt-invoice__item">
                                                <span class="kt-invoice__subtitle">NRO. OC</span>
                                                <span class="kt-invoice__text">@Model.Codigo</span>
                                            </div>*@
                                    </div>
                                </div>
                            </div>

                            <div class="kt-invoice__body kt-invoice__body--centered">

                                <div class="row mb-4">

                                    <div class="col-md-4">

                                        <h4>LUGAR DE ENTREGA </h4>
                                        <h6>@ViewData["LugarEntrega"]</h6>

                                    </div>

                                    <div class="col-md-8">

                                        <h4>COMENTARIOS O INTRUCCIONES ESPECIALES</h4>
                                        <h6>@ViewData["Instrucciones"]</h6>

                                    </div>

                                </div>

                                <div class="table-responsivemt-4">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ITEM</th>
                                                <th>DESCRIPCION</th>
                                                <th>UNIDAD</th>
                                                <th>CANTIDAD</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @{
                                                var aux = 1;
                                            }

                                            @foreach (var item2 in Model.Detalles)
                                            {
                                                <tr>
                                                    <td>
                                                        @item2.Articulo.Codigo
                                                    </td>
                                                    <td>@item2.Articulo.Nombre</td>
                                                    <td>@item2.Articulo.UnidMedida</td>
                                                    <td>@item2.Cantidad</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                                @*<hr />

                                    <p>
                                        Si Usted tiene alguna pregunta, por favor póngase en contacto con
                                    </p>
                                    <h6>Comprador: Ing. Luis MazzolaLuis Mazzola / Ing. Pilar Morante</h6>
                                    <h6>Celular: 5493516869779</h6>
                                    <h6>Email: compras@vilahousecasas.com</h6>

                                    <br />*@

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

